<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".publisherUpdate">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView22pubu"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="24dp"
                app:srcCompat="@drawable/mylogo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-35dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView52pubu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPDATE"
                    android:textColor="@color/blue"
                    android:textSize="35sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/textView62pubu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" PUBLISHER"
                    android:textColor="@color/green"
                    android:textSize="35sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <EditText
                android:id="@+id/publisherNameedt2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:ems="18"
                android:hint="Publisher Name"
                android:alpha="0.5"
                android:textAlignment="center"
                android:textColorHint="@color/blue"
                android:textSize="16dp"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                />

            <EditText
                android:id="@+id/publisherAddressedt2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:ems="18"
                android:hint="Publisher Address"
                android:alpha="0.5"
                android:textAlignment="center"
                android:textColorHint="@color/blue"
                android:textSize="16dp"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                />


            <EditText
                android:id="@+id/publisherPhoneedt2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:ems="18"
                android:hint="Publisher phone"
                android:alpha="0.5"
                android:textAlignment="center"
                android:textColorHint="@color/blue"
                android:textSize="16dp"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updatePublisherbtn"
                style="@android:style/Widget.Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:layout_gravity="center"
                android:background="@drawable/red_button_background"
                android:text="Update Publisher"
                android:textColor="@color/white"
                android:textSize="16sp" />




        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>